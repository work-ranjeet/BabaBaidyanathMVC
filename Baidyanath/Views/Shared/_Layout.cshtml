@using Baidyanath.Resources
@using Baidyanath.Extension


<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")


</head>
<body>
    <div class="PageContainer">
        <div class="Page outer_shadow">
            <header>
                <section id="home-Language-Section" style="width: 100%; height: 40px; vertical-align: middle;">
                    <table style="width: 100%; border: 0px; border-collapse: collapse;">
                        <tr>
                            <td>
                                <bdi class="mobileNumber">M : 9204616249</bdi>
                                <br />
                                <bdi class="mailid">baidyanathdham@gmail.com</bdi>
                            </td>
                            <td>
                                <bdi class="omnamhaShiwaye">@Html.Literal(Resource.OmNamahShiwaye)</bdi>
                            </td>
                            <td>
                                @{Html.RenderPartial("LoginButtonPartial");}
                            </td>
                        </tr>
                    </table>
                </section>
                <section class="HeaderImage inner_shadow">
                    @{Html.RenderPartial("ScrollingMantraPartial");}
                    @{Html.RenderPartial("HeaderImagePartial");}
                </section>
            </header>
            <menu class="menu">
                @{Html.RenderPartial("MenuPartial");}
            </menu>
            <section id="body" class="body-content inner_shadow">
                <table style="width: 100%; height: 100%; border-collapse: collapse;">
                    <colgroup>
                        <col style="width: 20%;" />
                        <col style="width: 60%;" />
                        <col style="width: 20%;" />
                    </colgroup>
                    <tr>
                        <td style="vertical-align: top;">
                            <section class="vistors">
                                @{Html.RenderPartial("VistorPartial", new Baidyanath.Models.Shared.TotalHitModel());}
                            </section>
                            <section id="latestPost" style="height: 281px;" >
                                @{Html.RenderPartial("LatestPostPartial", new Baidyanath.Models.Informations.LatestPostModel().UserLatestPost.Result);}
                            </section>
                            <section id="leftAdvertisment">
                                @{Html.RenderPartial("LeftAdvertismentPartial");}
                            </section>
                        </td>
                        <td style="vertical-align: top;">
                            <section class="bodysection">
                                <div class="heading  @(System.Threading.Thread.CurrentThread.CurrentCulture.Name == "hi-IN" ? "headingHindi" : "") ">
                                    <div style="height: 8px;"></div>
                                    @RenderSection("Header", required: false)
                                </div>
                                <div class="innerShadow">
                                    @RenderBody()
                                </div>
                            </section>
                        </td>
                        <td style="vertical-align: top;">
                            <section class="totalmember">
                                @{Html.RenderPartial("VistorPartial", new Baidyanath.Models.Shared.TotalHitModel());}
                            </section>
                            <section id="RightAdvertisment">
                                @{Html.RenderPartial("RightAdvertismentPartial");}
                            </section>
                        </td>
                    </tr>
                </table>
            </section>
            <footer>
                @{Html.RenderPartial("FooterPartial");}
            </footer>
        </div>
    </div>
    <div id="forgotPasswordPopup" title="@Resource.ForgetPassword" style="display: none; height: 200px; width: 250px;  z-index: 100; background-color: transparent;">forgot Password</div>
    <div id="changePasswordPopup" title="@Resource.ChangePassword" style="display: none; height: 200px; width: 250px; z-index: 100;">Change password</div>
</body>
</html>

<script>
    $(document).ready(function () {
        $("#divSliderButton").click(function () {
            $("div#Panel").slideToggle("slow");
            $("#divSliderButtonIcon").toggleClass('close');
        });



        // Default for header panel
        $("#headerpannel > div:gt(0)").hide();

        // Setting interval and transition effect
        setInterval(function () {
            $('#headerpannel > div:first').fadeOut(1000).next().fadeIn(2000).end().appendTo('#headerpannel');
        }, 10000);
    });


</script>

<script>
    $(document).ready(function () {
        $("#ForgetPassword").click(function () {
            $("#forgotPasswordPopup").dialog("open");
        });

        $("#forgotPasswordPopup").dialog({
            autoOpen: false,
            modal: true,
            draggable: false,
            resizable: false,
            show: {
                effect: "blind",
                duration: 500
            },
            hide: {
                effect: "explode",
                duration: 500
            },
            overlay: {
                opacity: 0.5,
                background: "black"
            }
        });

        $("#ChangePassword").click(function () {
            $("#changePasswordPopup").dialog("open");
        });

        $("#changePasswordPopup").dialog({
            autoOpen: false,
            modal: true,
            draggable: false,
            resizable: false,
            show: {
                effect: "blind",
                duration: 500
            },
            hide: {
                effect: "explode",
                duration: 500
            },
            overlay: {
                opacity: 0.5,
                background: "black"
            }
        });
    });
</script>



